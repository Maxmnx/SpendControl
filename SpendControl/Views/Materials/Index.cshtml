@model SpendControl.Models.Warehouse



<div class="container p-3">

	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Склад @Model.Name</h2>
		</div>
		<div class="col-6 text-right">
			<a asp-controller="Materials" asp-action="AddUsers" class="btn btn-primary ">
				<i class="fa-solid fa-users"></i> Дати доступ користувачам</a>
			<a asp-controller="Materials" asp-action="Create" class="btn btn-primary ">
				<i class="fa-solid fa-plus"></i> Додати матеріал</a>
		</div>
	</div>

	<br />

	
	@if(Model.Materials.Count() > 0){

		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>
						Назва
					</th>
					<th>
						Опис
					</th>
					<th>
						Кількість
					</th>
					<th>
						
					</th>
				</tr>
				
			</thead>
			<tbody>
				@foreach(var material in Model.Materials){
				<tr>
					<td>@material.Name</td>
					<td>@material.Description</td>
					<td>@material.Quantity  @material.Measurement</td>
					<td>
						<a asp-controller="Materials" asp-route-Id="@material.Id" asp-action="Edit" class="btn btn-primary ">
							<i class="fa-solid fa-pen-to-square"></i></a>
						<a asp-controller="Materials" asp-route-Id="@material.Id" asp-action="Delete" class="btn btn-primary ">
							<i class="fa-solid fa-trash-can"></i></a>
					</td>
				</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>Немає матеріалів</p>
	}

</div>

@model IList<SpendControl.Models.User>



<div class="container p-3">

	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Список користувачів</h2>
		</div>
	</div>

	<br />

	
	@if(Model.Count() > 0){

		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>
						Id
					</th>
					<th>
						Ім'я користувача
					</th>
					<th>
						Повне ім'я
					</th>
					<th>
						Номер телефону
					</th>
					<th>
						Електронна пошта
					</th>
				</tr>
				
			</thead>
			<tbody>
				@foreach(var user in Model){
				<tr>
					<td>@user.Id</td>
					<td>@user.UserName</td>
					<td>@user.FullName</td>
					<td>@user.PhoneNumber</td>
					<td>@user.Email</td>
				</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>Немає користувачів</p>
	}

</div>

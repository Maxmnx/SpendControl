@model IEnumerable<SpendControl.Models.UserWarehouse>



<div class="container p-3">

	<div class="row pt-4">
		<div class="col-6">
			<h2 class="text-primary">Список складів</h2>
		</div>
		<div class="col-6 text-right">
			<a asp-controller="Warehouses" asp-action="Create" class="btn btn-primary ">
				<i class="fa-solid fa-plus"></i> Додати склад</a>
		</div>
	</div>

	<br />

	
	@if(Model.Count() > 0){

		<table class="table table-bordered table-striped">
			<thead>
				<tr>
					<th>
						Назва
					</th>
					<th>
						Опис
					</th>
					<th>
						Адреса
					</th>
					<th>
						
					</th>
				</tr>
				
			</thead>
			<tbody>
				@foreach(var warehouse in Model){
				<tr>
					<td>@warehouse.Warehouse.Name</td>
					<td>@warehouse.Warehouse.Description</td>
					<td>@warehouse.Warehouse.Address</td>
					<td>
						
						<a asp-controller="Warehouses" asp-route-Id="@warehouse.Warehouse.Id" asp-action="Open" class="btn btn-primary ">
							<i class="fa-solid fa-arrow-up-right-from-square"></i></a>
						@if(warehouse.canEdit){
						<a asp-controller="Warehouses" asp-route-Id="@warehouse.Warehouse.Id" asp-action="Edit" class="btn btn-primary ">
							<i class="fa-solid fa-pen-to-square"></i></a>
						}
						@if(warehouse.canDelete){
						<a asp-controller="Warehouses" asp-route-Id="@warehouse.Warehouse.Id" asp-action="Delete" class="btn btn-primary ">
							<i class="fa-solid fa-trash-can"></i></a>
						}
					</td>
				</tr>
				}
			</tbody>
		</table>
	}
	else
	{
		<p>Немає складів</p>
	}

</div>

